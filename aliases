# stash
alias gstash='git stash'
alias gstashs='git stash push --staged'
gstashu () {
  # stash all unstaged changes. extra args go to ``git stash push``.
  git stash push --staged
  git stash push -u "$@"
  git stash pop --index stash@{1}
}
alias gpop="git stash pop -q; gst"
